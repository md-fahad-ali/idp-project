{
  "port": 3000,
  "watch": [
    "server.ts",
    "routes/*",
    "lib/*",
    "models/*",
    ".env"
  ],
  "exec": "npx tsx server.ts",
  "ext": "ts,js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "ignore": [
    ".git",
    "node_modules",
    ".next",
    "dist"
  ],
  "delay": "1000",
  "restartable": "rs"
}